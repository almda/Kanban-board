<Window x:Class="MileStone4.tester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MileStone4"
        mc:Ignorable="d"
        Title="tester" Height="450" Width="800">
    <Grid>
       
            <ItemsControl x:Name="itemcon" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="414" Margin="162,109,0,0" ItemsSource="{Binding list}"  >
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
       


    </Grid>
</Window>
